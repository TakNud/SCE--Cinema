@model IEnumerable<SCECinema.Models.Order>
@using SCECinema.Models

@{
    ViewBag.Title = "Index";
}

<h2>Orders</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@

<table class="table">
    <tr>
        <th>
            Order Date
        </th>
        <th>
            Email
        </th>
        <th>
            Total
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subtotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>

                @Html.ActionLink("Details", "Details", new { OrderID = item.OrderID }, new { @class = "btn btn-success" })

                @if (item.Status == OrderStatus.Complete)
                {@Html.ActionLink("Cancel", "Cancel", new { OrderID = item.OrderID }, new { @class = "btn btn-danger" })}

            </td>
        </tr>
    }

</table>
